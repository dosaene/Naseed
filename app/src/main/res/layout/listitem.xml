<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imvItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp" />

    <TextView
        android:id="@+id/txvItemDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imvItem"
        android:layout_alignTop="@+id/imvItem"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:text="Hola que ase adonde vas con esas cosas"/>

    <TextView
        android:id="@+id/txvItemFullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvItemDate"
        android:layout_alignLeft="@+id/txvItemDate"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Aquí vivió don antonio machado en 1915 más solo que la una"/>

</RelativeLayout>
